function potencia=potencia2_mejorado(n)
potencia=0;
while (n>1)
    if (rem(n,2)==0)
      n=n/2 ; 
      potencia=potencia+1; % esto puede hacerse también como potencia ++
      else
         disp('El número no es una potencia de dos. ¿Me querías engañar? ;>')
         break
     endif
endwhile
	  
%if (n==1)
%  printf('El número dado es 2 elevado a')
%disp(potencia)
%endif
